<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IC_FWOK</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/IC_FWOK.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <style>
        .vertical-nav {
            min-width: 250px;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            background-color: #6A1AB7;
            padding: 20px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            border-top-right-radius: 40px;
        }

            .vertical-nav .nav-link {
                font-weight: bold;
                color: #fff;
                font-size: 1.1em;
                margin-bottom: 5px; /* Add space between nav-items */
                margin-top: 5px;
                border-bottom: 0.3px solid #fff; /* Make the line thinner */
            }

                .vertical-nav .nav-link:hover {
                    background-color: #5a0fa7;
                }

            .vertical-nav .compose-link {
                background-color: #976ED7;
                border-radius: 20px;
                padding: 10px 15px;
                display: flex;
                align-items: center;
                justify-content: center;
            }

                .vertical-nav .compose-link:hover {
                    background-color: #BE95FF;
                }

                .vertical-nav .compose-link i {
                    margin-right: 5px;
                }

        .main-content {
            margin-left: 270px;
            padding: 20px;
        }

        .user-info {
            margin-bottom: 20px;
        }

            .user-info img {
                border-radius: 50%;
                width: 60px;
                height: 60px;
            }

            .user-info .user-name {
                font-size: 1.2em;
                font-weight: bold;
                color: #fff;
                margin-top: 5px;
            }

        .nav-bottom {
            margin-top: auto;
        }

        @@media (max-width: 768px) {
            .vertical-nav {
                display: none;
            }

            .main-content {
                margin-left: 0;
            }
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-white d-md-none">
        <a class="navbar-brand" href="#">
            <img src="~/Images/Logo.png" alt="Logo" style="height: 60px;" />
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Email" asp-action="Compose">Compose</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Email" asp-action="Inbox">Inbox</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Email" asp-action="Sent">Sent</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Email" asp-action="Favorite">Favorite</a>
                </li>
            </ul>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Settings">Settings</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#" id="logoutButton">Logout</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="vertical-nav d-none d-md-flex">
        <div>
            <div class="user-info text-center">
                <img src="~/Images/UserPic.png" alt="User Image" />
                <div class="user-name">First Last</div>
            </div>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link compose-link" asp-area="" asp-controller="Email" asp-action="Compose">
                        <i class="fas fa-pencil-alt"></i> Compose
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Email" asp-action="Inbox">Inbox</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Email" asp-action="Sent">Sent</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Email" asp-action="Directory">Directory</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Directory" asp-action="Upload">Upload File</a>
                </li>

            </ul>
        </div>
        <div class="nav-bottom">
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Settings">Settings</a>
                </li>
                <li class="nav-item">
                    <form id="logoutForm" asp-controller="Account" asp-action="Logout" method="post" style="display: inline;">
                        <a class="nav-link" href="#" id="logoutButton">Logout</a>
                    </form>
                </li>






            </ul>
        </div>
    </div>
    <div class="main-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script>
        document.getElementById('logoutButton').addEventListener('click', function (event) {
            event.preventDefault();
            if (confirm('Are you sure you want to log out?')) {
                document.getElementById('logoutForm').submit();
            }
        });
    </script>



    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - InterCenter Mail by FWOK - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
